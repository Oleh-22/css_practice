   <header class='header'>
    <a href="#test">
      {{> logo }}
    </a>

    <nav class='header_nav'>
      <div class="header_nav_right">{{> nav list=header}}</div>
    </nav>
  </header>

  <main class="main">
    <div class="info">
      {{#with info}}
        <h1 class="info_title">{{title}}</h1>
        <p class="info_text">{{description}}</p>
      {{/with}}
    </div>


    {{#with form}}
      <form class="form">
        <h2 class="form_title">{{title}}</h2>

          <div class="form_input_list">
            {{#each inputs}}
              <input type="{{type}}" placeholder="{{placeholder}}"
               class="form_input"
               name="{{name}}"
               id="form-input-{{id}}">
            {{/each}}
          </div>

          <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
          </div>

        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
      </form>
    {{/with}}
  </main>

  <div class="updates">
    {{#with updates}}
    <h2 class="updates_title">{{title}}</h2>

      <div class="updates_cards">

        {{#each list}}
          <div class="updates_card">
            <div
      class='updates_card_image'>32x32</div>
    <div class="updates_card_text">
          <strong>{{nickname}}</strong>
          <p>{{description}}</p>
          </div>
          </div>
        {{/each}}
      </div>
      {{#with show_all}}
        <a href="{{ur}}" class="updates_link">{{text}}</a>
      {{/with}}
    {{/with}}
  </div>

  <div class="expirience">
    {{#with expirience}}
    <div class="expirience_header">
      <h2 class="expirience_title">{{title}}</h2>
      <div class="expirience_badge">{{badge}}</div>
      </div>
        <div class="expirience_list">
          {{#each list}}
            <div class="expirience_list_card">
            <strong class="expirience_list_name">{{name}}</strong>
            <p class="expirience_list_text">{{details}}</p>
            </div>
          {{/each}}
        </div>
    {{/with}}
  </div>

  <footer class="footer" id="test">
    <div>
      {{> logo }}
      <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
      <span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true}}
      </div>
    {{/each}}

  </footer> 
     