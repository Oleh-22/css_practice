</head>

  <body>

    <div class='page page--dashboard'>
        <aside class='page__aside aside vertical vertical--big'>
            <div class='text aside__logo'>Sidebar</div>
            <nav class='vertical vertical--small'>
                <a href='#' class='nav-button nav-button--active click'>
                    <span class='icon nav-button__icon' style="background-image: url('svg/nav/home.svg')"></span>
                    <span class='text text--light'>Home</span></a>
                <a href='#' class='nav-button click'>
                    <span class='icon nav-button__icon' style="background-image: url('svg/nav/orders.svg')"></span>
                    <span class='text text--light'>Orders</span>
                </a>
                <a href='#' class='nav-button click'>
                    <span class='icon nav-button__icon' style="background-image: url('svg/nav/products.svg')"></span>
                    <span class='text text--light'>Products</span>
               </a>
            </nav>
        </aside>

      <header class='header'>
        <div class='layout header__content text--small'>
          <div class='header__search relative'>
            <input type='text' placeholder='Search' class='text field field--header'/>
            <span class='icon header__icon-search' style="background-image: url('svg/header/search.svg')"></span>
            <span class='icon header__icon-settings icon--button icon--color-blue click' style="background-image: url('svg/header/settings.svg')"></span>
          </div>

          <div class="header__nav relative vertical">
            <span class='icon header__nav-icon-settings analytic__button icon--button icon--color-yellow click' style="background-image: url('svg/assets/antenna.svg')"></span>
            <span class='icon header__nav-icon-settings analytic__button icon--button icon--color-light-blue click' style="background-image: url('svg/assets/symbol.svg')"></span>
            <span class='icon header__nav-icon-settings analytic__button icon--button icon--color-yellow click' style="background-image: url('svg/assets/bell.svg')"></span>
          </div>
        </div>
      </header>

      <main class='main'>
        <div class='layout'>
          <section class='box analytic__block vertical--big'>
            <div class='analytic analytic--double analytic--blue'>
                <span class='icon analytic__button icon--button icon--color-blue click'style="background-image: url('svg/analytic/order.svg')"></span>
                <div class='relative vertical vertical--small'>
                    <div class='analytic__title text text--light'>$961</div>
                    <div class='text text--small text--lighter'>Total order</div>
                    <span class='icon analytic__arrow'style="background-image: url('svg/analytic/blue-arrow.svg')"></span>
                </div>
            </div>

            <div class='analytic analytic--double analytic--purple'>
              <span class='icon analytic__button icon--button icon--color-purple click' style="background-image: url('svg/analytic/shopping-bag.svg')"></span>
                <div class='relative vertical vertical--small'>
                    <div class='analytic__title text text--light'>$500.00</div>
                    <div class='text text--small text--lighter'>Total earning</div>
                    <span class='icon analytic__arrow' style="background-image: url('svg/analytic/blue-arrow.svg')"></span>
                </div>
            </div>

            <div class='analytic analytic--line analytic--blue vertical--small'>
              <span class='icon analytic__button icon--button icon--color-blue click' style="background-image: url('svg/analytic/money.svg')"></span>
                <div class='relative vertical vertical--small'>
                    <div class='analytic__title--small text text--light'>$203k</div>
                    <div class='text text--small text--lighter'>Total Income</div>
                </div>
            </div>

            <div class='analytic analytic--line analytic__border'>
              <span class='icon analytic__button icon--button icon--color-yellow click'style="background-image: url('svg/analytic/shop.svg')"></span>
              <div class='relative vertical vertical--small'>             
                <div class='analytic__title--small text text--black'>$203k</div>
                <div class='text text--small text--grey'>Total Income</div>
              </div>
            </div>
          </section>

          <div class='main__block vertical--large'>
            <div class='box box--size vertical'>
              <div class='text text--heading'>Purchase list</div>
                <div class='divider'></div>
              <div class='purchase__block vertical'>
                <div class='text'>ID437661</div>
                <div class='text'>AirOn ProCam</div>
                <div class='text'>132.32 EUR</div>
                <div class='text'>Customer</div>
                <div class='text'>May 11, 2023, 14:21</div>
                <div class='text'>7/8 USB Type-C</div>
                <div class='text text--warning'>Not paid</div>
                <div class='text'>robin@com.de</div>
              </div>

              <div class='divider'></div>
              <div class='purchase__block vertical'>
                <div class='text'>ID437661</div>
                <div class='text'>PHILIPS Essential</div>
                <div class='text'>543 USD</div>
                <div class='text'>Customer</div>
                <div class='text'>May 11, 2023, 14:21</div>
                <div class='text'>HD9200/90</div>
                <div class='text text--success'>Pay by Stripe</div>
                <div class='text'>dima@com.ua</div>
              </div>
            </div>

            <div class='box box--width vertical'>
              <div class='text text--heading'>Payment</div>
              <div class='divider'></div>
            <div class='purchase__select vertical--small'>
              <div class='vertical--small'>
                <input type='radio'name='HowToPay'class='checkbox'checked/>
                <label class='text'>Credit card</label>
              </div>
              <div class='vertical--small'>
                <input type='radio' name='HowToPay' class='checkbox'/>
                <label class='text'>Debit card</label>
              </div>

              <div class='vertical--small'>
                <input type='radio' name='HowToPay' class='checkbox'/>
                <label class='text'>PayPal</label>
              </div>
            </div>

            <div class='main__form vertical'>
              <div class='field__block vertical--micro'>
                <div class='text'>Name on card</div>
                <input class='payment__field' type='text' name='name'/>
              </div>

              <div class='field__block vertical--micro'>
                <div class='text'>Credit card number</div>
                <input class='payment__field' type='text' name='card_number'/>
              </div>

              <div class='field__block vertical--micro'>
                <div class='text'>Expiration</div>
                <input class='payment__field' type='text'name='expiration'/>
              </div>

              <div class='field__block vertical--micro'>
                <div class='text'>CVV</div>
                <input class='payment__field' type='text' name='cvv'/>
              </div>
            </div>

            <div class='divider'></div>
            <div class='main__form vertical'>
              <div class='field__block vertical--micro'>
                <div class='text'>Country</div>
                <div class='relative click'>
                  <div class='field field--select'>
                    <span class='text'>Choose...</span>
                  </div>
                  <span class='icon select__icon' style="background-image: url('svg/select.svg')"></span>
                  <select class='field__select'>
                    <option value='country'>1</option>
                    <option value='country'>2</option>
                    <option value='country'>3</option>
                    <option value='country'>4</option>
                  </select>
                </div>
              </div>

              <div class='field__block vertical--micro'>
                <div class='text'>State</div>
                <div class='relative click'>
                  <div class='field field--select'>
                    <span class='text'>Choose...</span>
                  </div>
                  <span class='icon select__icon' style="background-image: url('svg/select.svg')"></span>
                  <select class='field__select'>
                    <option value='state'>1</option>
                    <option value='state'>2</option>
                    <option value='state'>3</option>
                    <option value='state'>4</option>
                  </select>
                </div>
              </div>
            </div>
            <div class='divider'></div>
            <a href='#' class='payment-button'>
              <span class='text text--light'>Continue to checkout</span>
            </a>
          </div>
        </div>
      </main>
    </div>

