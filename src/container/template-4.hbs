
          <header class='header'>
        <div>
          {{> logo-4 }}
        </div>

        <nav class='header_nav'>
          <div class="header_nav_right">{{> nav list=header}}</div>
        </nav>
      </header>
      {{#with main}}
        <div class="hero">
          <div class="hero_content">
            <h1 class="hero_title">{{heading}}</h1>
            <p class="hero_text">{{descriotion}}</p>
            <a href="{{href}}" class="hero_button">{{button}}</a>
          </div>
          <img src="{{image}}" alt="hero image" class="hero_image">
        </div>
      {{/with}} 


      <main class="cards">
        {{#each featured}}
        {{> cardFeatured data=this}}
        {{/each}}
      </main>

      <div class="actions">
      {{#each actions}}
       {{> cardActions data=this}}              
      {{/each}} 
       </div>       

      <footer class="footer">
        <div>
          {{> logo-4 }}
          <span class="footer_copyright">Copyright 2023-2024</span>
        </div>
        {{#each footer}}
        <div>
          <span class="footer_title">{{title}}</span>
          {{> nav list=links isVertical=true}}
          </div>
        {{/each}}

      </footer> 
     